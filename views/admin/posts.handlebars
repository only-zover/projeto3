<h1>Lista de postagens</h1>
<a href="posts/add"><button type="button">Nova postagem</button></a>
{{#each posts}}
<div>
    <h2>~ {{title}}</h2>
    <h4>{{description}}</h4>
    <p>{{content}}</p>
    <small>{{date}}</small><br>
    <a href="posts/edit/{{_id}}"><button type="button">Editar postagem</button></a>
    <form action="posts/delete" method="post">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit">Deletar postagem</button>
    </form>
    <hr>
</div>
{{else}}
<h2>~ Nenhuma postagem registrada</h2>
{{/each}}